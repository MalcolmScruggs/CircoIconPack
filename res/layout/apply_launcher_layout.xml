<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.mookie.circo.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/listview_height"
        android:background="@drawable/card_bg_pressed"
        android:orientation="horizontal"
        android:padding="@dimen/margin_small_lg"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@string/content"
            android:scaleType="centerCrop"
            android:src="@mipmap/action_banner" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:alpha="0.35"
            android:background="@color/icon_light_gray"
            android:contentDescription="@string/content"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Apex"
            android:textColor="@color/apply_launcher_text_color"
            android:textSize="@dimen/launcher_title"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtInstalled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/list_image"
            android:layout_alignRight="@+id/list_image"
            android:layout_margin="@dimen/margin_small"
            android:paddingTop="4dp"
            android:text="Installed"
            android:textSize="@dimen/text_small_lg"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </RelativeLayout>

</RelativeLayout>